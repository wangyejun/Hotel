<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#047ac4"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房型选择"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/bzj"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商务标准间"
        android:id="@+id/radioButton3"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="床型：2张1.5米单人床
房间面积：28-30平米
人数：2
窗户：有
其他"
        android:id="@+id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/radioButton3"
        android:layout_toEndOf="@+id/imageButton2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="199元"
        android:textSize="18dp"
        android:id="@+id/textView7"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="120dp"
        />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitXY"
        android:src="@mipmap/dcf"
        android:layout_marginTop="210dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商务大床房"
        android:id="@+id/radioButton4"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="床型：1张1.8米双人床
房间面积：28-30平米
人数：2
窗户：有
其他"
        android:id="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/radioButton4"
        android:layout_toEndOf="@+id/imageButton2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="199元"
        android:textSize="18dp"
        android:id="@+id/textView8"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="240dp"
        />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:scaleType="fitXY"
        android:src="@mipmap/jtf"
        android:layout_marginTop="340dp"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商务家庭房"
        android:id="@+id/radioButton5"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="床型：1张1.8米双人床
            和1张1.5单人床
房间面积：48平米
人数：3
窗户：有
其他"
        android:id="@+id/textView6"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/radioButton5"
        android:layout_toEndOf="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="299元"
        android:textSize="18dp"
        android:id="@+id/textView9"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="380dp"
        />




</RelativeLayout>